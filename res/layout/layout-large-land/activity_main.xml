<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/buttonclear"
        android:layout_width="244dp"
        android:layout_height="95dp"
        android:layout_marginStart="400dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/apple_lightgray"
        android:gravity="center"
        android:text="@string/buttonclear"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttondel"
        android:layout_width="114dp"
        android:layout_height="95dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/apple_lightgray"
        android:gravity="center"
        android:text="@string/buttondelete"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/buttonclear"
        app:layout_constraintTop_toTopOf="@+id/buttonclear" />

    <TextView
        android:id="@+id/titlethe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="@string/titlethe"
        android:textColor="@color/white"
        android:textSize="45sp"
        app:layout_constraintBottom_toTopOf="@+id/titlecalculator"
        app:layout_constraintStart_toStartOf="@+id/importanttext" />

    <TextView
        android:id="@+id/titlecalculator"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:text="@string/titlecalculator"
        android:textColor="@color/white"
        android:textSize="45sp"
        app:layout_constraintBottom_toTopOf="@+id/maintextbox"
        app:layout_constraintStart_toStartOf="@+id/maintextbox" />

    <TextView
        android:id="@+id/titleeasy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="@string/titleeasy"
        android:textColor="@color/white"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="@+id/titlethe"
        app:layout_constraintStart_toEndOf="@+id/titlethe"
        app:layout_constraintTop_toTopOf="@+id/titlethe" />

    <TextView
        android:id="@+id/maintextbox"
        android:layout_width="330dp"
        android:layout_height="396dp"
        android:background="@color/black"
        android:gravity="center"
        android:text=""
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.069"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.877" />

    <Button
        android:id="@+id/button7"
        android:layout_width="114dp"
        android:layout_height="95dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/apple_gray"
        android:gravity="center"
        android:text="@string/button7"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/buttonclear"
        app:layout_constraintTop_toBottomOf="@+id/buttonclear" />

    <Button
        android:id="@+id/button4"
        android:layout_width="114dp"
        android:layout_height="95dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/apple_gray"
        android:gravity="center"
        android:text="@string/button4"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/button7"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/button7"
        app:layout_constraintTop_toBottomOf="@+id/button7" />

    <Button
        android:id="@+id/button3"
        android:layout_width="114dp"
        android:layout_height="95dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/apple_gray"
        android:gravity="center"
        android:text="@string/button3"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/button4"
        app:layout_constraintStart_toStartOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <Button
        android:id="@+id/button2"
        android:layout_width="114dp"
        android:layout_height="95dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/apple_gray"
        android:gravity="center"
        android:text="@string/button2"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/button5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/button5" />

    <Button
        android:id="@+id/button1"
        android:layout_width="114dp"
        android:layout_height="95dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/apple_gray"
        android:gravity="center"
        android:onClick="playSound"
        android:text="@string/button1"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/button6"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button6"
        app:layout_constraintTop_toBottomOf="@+id/button6" />

    <Button
        android:id="@+id/button5"
        android:layout_width="114dp"
        android:layout_height="95dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/apple_gray"
        android:gravity="center"
        android:text="@string/button5"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/button8"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button8"
        app:layout_constraintTop_toBottomOf="@+id/button8" />

    <Button
        android:id="@+id/button6"
        android:layout_width="114dp"
        android:layout_height="95dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/apple_gray"
        android:gravity="center"
        android:text="@string/button6"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/button9"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button9"
        app:layout_constraintTop_toBottomOf="@+id/button9" />

    <Button
        android:id="@+id/buttonplus"
        android:layout_width="114dp"
        android:layout_height="95dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/apple_orange"
        android:gravity="center"
        android:text="@string/buttonplus"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="@+id/buttonmultiply"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonmultiply"
        app:layout_constraintTop_toBottomOf="@+id/buttonmultiply" />

    <Button
        android:id="@+id/buttonminus"
        android:layout_width="114dp"
        android:layout_height="95dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/apple_orange"
        android:gravity="center"
        android:text="@string/buttonminus"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="@+id/buttonplus"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonplus"
        app:layout_constraintTop_toBottomOf="@+id/buttonplus" />

    <Button
        android:id="@+id/buttoneuqal"
        android:layout_width="114dp"
        android:layout_height="95dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/green"
        android:gravity="center"
        android:text="@string/buttonequal"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="@+id/buttonminus"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonminus"
        app:layout_constraintTop_toBottomOf="@+id/buttonminus" />

    <Button
        android:id="@+id/buttondot"
        android:layout_width="114dp"
        android:layout_height="95dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/apple_gray"
        android:gravity="center"
        android:text="@string/buttondot"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="@+id/button1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button1"
        app:layout_constraintTop_toBottomOf="@+id/button1" />

    <Button
        android:id="@+id/button0"
        android:layout_width="114dp"
        android:layout_height="95dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/apple_gray"
        android:gravity="center"
        android:text="@string/button0"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/button2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
        android:id="@+id/button8"
        android:layout_width="114dp"
        android:layout_height="95dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/apple_gray"
        android:gravity="center"
        android:text="@string/button8"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/buttonclear"
        app:layout_constraintTop_toBottomOf="@+id/buttonclear" />

    <Button
        android:id="@+id/button9"
        android:layout_width="114dp"
        android:layout_height="95dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/apple_gray"
        android:gravity="center"
        android:text="@string/button9"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/buttondel"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttondel"
        app:layout_constraintTop_toBottomOf="@+id/buttondel" />

    <Button
        android:id="@+id/buttondivide"
        android:layout_width="114dp"
        android:layout_height="95dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/apple_orange"
        android:gravity="center"
        android:text="@string/buttondivide"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/buttondel"
        app:layout_constraintTop_toTopOf="@+id/buttondel"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/buttonmultiply"
        android:layout_width="114dp"
        android:layout_height="95dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/apple_orange"
        android:gravity="center"
        android:text="@string/buttonmultiply"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/buttondivide"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttondivide"
        app:layout_constraintTop_toBottomOf="@+id/buttondivide"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/importanttext"
        android:layout_width="330dp"
        android:layout_height="194dp"
        android:text=""
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="@+id/maintextbox"
        app:layout_constraintEnd_toEndOf="@+id/maintextbox"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/maintextbox"
        app:layout_constraintTop_toTopOf="@+id/maintextbox"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/importanttext2"
        android:layout_width="330dp"
        android:layout_height="194dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="@+id/importanttext"
        app:layout_constraintTop_toBottomOf="@+id/importanttext" />

</androidx.constraintlayout.widget.ConstraintLayout>